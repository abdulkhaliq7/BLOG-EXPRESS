<div class="form-group mb-2" >
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group mb-2" >
    <label for="description">Description</label>
    <textarea class="form-control" name="description" id="description"><%= article.description %></textarea>
</div>
<div class="form-group mb-3" >
    <label for="markdown">Markdown</label>
    <textarea required class="form-control" name="markdown" id="markdown"><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
